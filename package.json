{
  "name": "music-blog",
  "version": "1.0.0",
  "description": "Personal music blog and portfolio built with 11ty",
  "main": "index.js",
  "scripts": {
    "build": "eleventy --quiet",
    "build:watch": "eleventy --watch --serve --quiet",
    "start": "eleventy --serve --quiet",
    "clean": "rm -rf public",
    "dev": "npm run clean && eleventy --serve --watch --quiet",
    "extract-music": "node scripts/extract-metadata.js music-files/",
    "extract-music:preserve": "node scripts/extract-metadata.js music-files/",
    "extract-music:force": "node scripts/extract-metadata.js music-files/ --force",
    "extract-single": "node scripts/extract-metadata.js",
    "extract-single:force": "node scripts/extract-metadata.js --force",
    "build:fresh": "npm run extract-music:force && npm run build",
    "build:incremental": "npm run extract-music:preserve && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "c8 jest",
    "test:e2e": "playwright test",
    "test:all": "npm run test && npm run test:e2e",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "keywords": [
    "11ty",
    "blog",
    "music",
    "static-site"
  ],
  "author": "zuned11",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@playwright/test": "^1.55.0",
    "c8": "^10.1.3",
    "eslint": "^9.34.0",
    "jest": "^30.0.5",
    "luxon": "^3.4.4",
    "markdown-it": "^14.0.0",
    "markdown-it-anchor": "^8.6.7",
    "prettier": "^3.6.2"
  },
  "dependencies": {
    "lunr": "^2.3.9",
    "yaml": "^2.3.4"
  }
}
